#!/usr/bin/env bash
if (bat --help &>/dev/null); then
	exec bat "$@"
fi
if [[ -f "$@" ]]; then
	echo '────────────────────────────────────────────────────────────────────────────────'
	echo -e "     File: \e[1m$@\e[0m"
	echo '────────────────────────────────────────────────────────────────────────────────'
fi
cat -n "$@"

