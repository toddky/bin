#!/usr/bin/env bash
index="${1:-1}" && shift
output="$(xrandr | awk '
	/ connected/ {count++}
	(count == '$index'){print $1; exit}
')"

# Check monitor
if [[ -z "$output" ]]; then
	print-error "Monitor '$index' not found"
	exit 2
fi

# Print monitor name
if [[ -z "$@" ]]; then
	echo "$output"
	exit
fi

# TODO: Set refresh rate
# https://www.reddit.com/r/i3wm/comments/10y1eom/comment/j7vl2ja/

# Print and run
 print-run xrandr --output "$output" "$@"

